{
    "name": "@tspro/brace-format",
    "version": "4.0.1",
    "author": "PahkaSoft",
    "repository": {
        "type": "git",
        "url": "https://github.com/pahkasoft/brace-format.git"
    },
    "bugs": {
        "url": "https://github.com/pahkasoft/brace-format/issues"
    },
    "private": false,
    "license": "MIT",
    "description": "A TS/JS library for powerful string formatting.",
    "files": [
        "./dist/index.d.ts",
        "./dist/index.d.mts",
        "./dist/index.js",
        "./dist/index.mjs",
        "./dist/index.global.js",
        "package.json",
        "README.md",
        "CHANGELOG.md",
        "LICEWNSE"
    ],
    "types": "./dist/index.d.ts",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "unpkg": "./dist/index.global.js",
    "exports": {
        ".": {
            "browser": {
                "require": {
                    "types": "./dist/index.d.ts",
                    "default": "./dist/index.js"
                },
                "import": {
                    "types": "./dist/index.d.mts",
                    "default": "./dist/index.mjs"
                }
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            }
        }
    },
    "dependencies": {
        "jsbi": "^4.3.2"
    },
    "devDependencies": {
        "@swc/core": "^1.13.5",
        "@types/jasmine": "^5.1.12",
        "benchmark": "^2.1.4",
        "cross-env": "^10.1.0",
        "jasmine": "^5.12.0",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-cli": "^2.0.0",
        "karma-jasmine": "^5.1.0",
        "karma-webpack": "^5.0.1",
        "npm-watch": "^0.13.0",
        "rimraf": "^6.0.1",
        "ts-loader": "^9.5.4",
        "tsup": "^8.5.0",
        "typedoc": "^0.28.14",
        "typescript": "latest",
        "webpack": "^5.102.1"
    },
    "watch": {
        "build:dev": {
            "patterns": [
                "src"
            ],
            "extensions": "ts",
            "quiet": false
        }
    },
    "scripts": {
        "build": "tsup",
        "watch": "tsup --watch",
        "test": "karma start",
        "docs": "typedoc",
        "benchmark": "npm run build && node benchmarks/benchmark.mjs"
    },
    "browserslist": [
        "defaults"
    ]
}
